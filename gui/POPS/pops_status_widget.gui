				parentanchor = hcenter
				ignoreinvisible = yes
				direction = vertical
				spacing = 8
				text_button_square = {
					size = { 168 0 }
					name = "login_button"
					visible = "[Not(POPSStatusIsLoggedIn)]"
					blockoverride "Center_text" { text = "LOGIN" }
					blockoverride "On_click"
					{
						onclick = "[POPSStatusWidget.ToggleLoginWindow]"
						enabled = "[Not(POPSStatusIsLoggingIn)]"
					}
				}

