			ignoreinvisible = yes
			direction = vertical
			parentanchor = hcenter
			margin_top = 16
			spacing = 6

			block "paradox_icon"
			{
				widget = {
					parentanchor = hcenter
					size = { 100 100 }
					icon = {
						parentanchor = hcenter|vcenter
						texture = "gfx/interface/frontend/platypus_symbol_account.dds"
						size = { 90 90 }
						visible = "[Not(POPSStatusIsLoggingIn)]"
					}

					pops_load_indicator = {
						parentanchor = center
						size = { 80 80 }
						blockoverride "load_indicator"
						{
							visible = "[POPSStatusIsLoggingIn]"
						}
					}
				}
			}

